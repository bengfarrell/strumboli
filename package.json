{
  "name": "strumboli",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "./node_modules/.bin/tsc && ./node_modules/.bin/rollup -c rollup.config.js",
    "build:watch": "./node_modules/.bin/tsc --watch",
    "build:osx": "npm run build && ./build.sh",
    "build:dmg": "npm run build:osx && ./create-dmg.sh",
    "build:linux": "npm run build && ./build-linux.sh",
    "build:deb": "npm run build:linux && ./create-deb.sh",
    "build:discover:osx": "./build-discovery-osx.sh",
    "build:discover:dmg": "npm run build:discover:osx && ./create-discovery-dmg.sh",
    "build:discover:linux": "./build-discovery-linux.sh",
    "build:discover:deb": "npm run build:discover:linux && ./create-discovery-deb.sh",
    "lint": "npm run lint:eslint",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier \\\\\\\"**/*.{cjs,html,js,json,md,ts}\\\\\\\" --write",
    "dev": "npm run build:watch & wds --watch",
    "socket-dev": "npm run build:watch & SOCKET_MODE=true wds --watch",
    "hiddev": "npm run build:watch & wds --root-dir . --open direct.html --watch",
    "docs": "npm run docs:build",
    "docs:clean": "rimraf docs",
    "docs:deploy": "npm run docs && node_modules/.bin/gh-pages -d docs",
    "docs:gen": "./node_modules/.bin/eleventy --config=eleventy.config.mjs",
    "docs:gen:watch": "./node_modules/.bin/eleventy --config=eleventy.config.mjs --watch",
    "docs:build": "npm run docs:clean && npm run docs:gen",
    "docs:dev": "npx @11ty/eleventy --serve --quiet"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bengfarrell/midi-strummer.git"
  },
  "dependencies": {
    "lit": "^3.3.1",
    "@spectrum-web-components/bundle": "^1.8.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/minimatch": "^3.0.5",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "@web/dev-server": "^0.1.31",
    "@web/rollup-plugin-html": "^2.0.0",
    "eslint": "^8.15.0",
    "gh-pages": "^5.0.0",
    "prettier": "^2.6.2",
    "rollup": "^2.73.0",
    "rollup-plugin-clean": "^1.0.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "typescript": "~5.2.0"
  }
}
